{% extends 'dashboard/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <div class="text-center">
                        <h3>Bus List</h3>
                    </div>
                </div>

                <div class="box-body">

                    <div class="row">
                        <div class="col-md-2">
                            <label class="control-label"> Route</label>
                        </div>

                        <div class="col-md-3">
                            <select onchange="fetchBusesOfRoute()" id="route" class="form-control">
                                {% for route in routes %}
                                    <option value="{{ route.getId() }}" >{{ route.getRouteNo() ~": "~route.getRouteName() }}</option>
                                {% endfor %}
                            </select>
                        </div>


                    </div>

                    <div class="row" id="data_row">
                        <table class="table">
                            <thead>
                            <tr>

                                <th>bus No</th>
                                <th>Name</th>
                                <th>Published</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for bus in buses %}
                                <tr>
                                    <td>{{ bus.busNo }}</td>
                                    {% if bus.busName!=null%}
                                        <td>{{ bus.busName }}</td>
                                    {% else %}
                                        <td>-</td>
                                    {% endif %}

                                    {% if bus.published %}
                                        <td><span class="label label-success">Published</span></td>
                                    {% else %}
                                        <td><span class="label label-success">Unpublished</span></td>
                                    {% endif %}

                                    <td><a  type="button"  class="btn btn-success" href="{{ url('dashboard_bus_configure',{'id':bus.getId()}) }}"><span class="glyphicon glyphicon-list-alt"></span> Edit</a></td>
                                </tr>
                            {%endfor%}

                            </tbody>

                        </table>
                    </div>


                </div>
                {#<div class="box-footer" style="text-align: right">#}
                {##}
                {#</div>#}

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>

        $(document).ready(function () {
            // fetchBusesOfRoute();

        });

        function fetchBusesOfRoute(){
            var path = "{{ path('dashboard_bus_list_ajax_load_data') }}";
            var jsondata=JSON.stringify({route:$('#route').val()});
//            $('.loader').show();
            $.ajax({
                type: "POST",
                url: path,
                dataType: "json",
                data: {data:jsondata},
                success : function(response)
                {
//                    $('.loader').hide();
                    var innerHtml='<table class="table"> <thead><tr><th>bus No</th><th>Name</th><th>Published</th><th></th></tr></thead><tbody>';
                    for(var i=0;i<response.length;i++){
                        innerHtml=innerHtml+'<tr>';
                        innerHtml=innerHtml+'<td>'+response[i].busNo+'<td>';
                        innerHtml=innerHtml+'<td>'+response[i].busName+'<td>';
                        if(response[i].published){
                            innerHtml=innerHtml+'<td><span class="label label-success">Published</span><td>';
                        }
                        else{
                            innerHtml=innerHtml+'<td><span class="label label-success">Unpublished</span><td>';
                        }
                        innerHtml=innerHtml+'<td><a type="button" class="btn btn-success" href="PLACEHO##LDER"><span class="glyphicon glyphicon-list-alt"></span> Edit</a></td>';

                        innerHtml=innerHtml+'<tr>';
                        var vRoute = "{{ path('dashboard_bus_configure', { 'id': "vPLACEHOLDER" }) }}";
                        vRoute=vRoute.replace("vPLACEHOLDER", response[i].id);
                        innerHtml=innerHtml.replace("PLACEHO##LDER",vRoute);
                    }

                    innerHtml=innerHtml+'</tbody></table>';
                    $('#data_row').html(innerHtml);

                }
            });
        }



    </script>
{% endblock %}
