{% extends 'dashboard/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <div class="text-center">
                        <h3>Add User</h3>
                    </div>
                </div>
                {{ form_start(form,{'attr': {'class': 'form-horizontal'} }) }}
                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(form.username, form.username,{'label_attr': {'class': 'col-md-3 control-label'}}) }}
                        <div class="col-md-4">
                            {{ form_widget(form.username,{'attr':{'class' : 'form-control'}}) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_errors(form.username,{'attr':{'class' : 'label-error'}}) }}
                        </div>
                    </div>


                    <div class="form-group">
                        {{ form_label(form.email, form.email,{'label_attr': {'class': 'col-md-3 control-label'}}) }}
                        <div class="col-md-4">
                            {{ form_widget(form.email,{'attr':{'class' : 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.role, form.role,{'label_attr': {'class': 'col-md-3 control-label'}}) }}
                        <div class="col-md-4">
                            {{ form_widget(form.role,{'attr':{'class' : 'form-control'}}) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_errors(form.role,{'attr':{'class' : 'label-error'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.password.first, form.password.first,{'label_attr': {'class': 'col-md-3 control-label'}}) }}
                        <div class="col-md-4">
                            {{ form_widget(form.password.first,{'attr':{'class' : 'form-control'}}) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_errors(form.password.first,{'attr':{'class' : 'label-error'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.password.second, form.password.second,{'label_attr': {'class': 'col-md-3 control-label'}}) }}
                        <div class="col-md-4">
                            {{ form_widget(form.password.second,{'attr':{'class' : 'form-control'}}) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_errors(form.password.second,{'attr':{'class' : 'label-error'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.isActive, form.isActive,{'label_attr': {'class': 'col-md-3 control-label'}}) }}
                        <div class="col-md-4">
                            {{ form_widget(form.isActive) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_errors(form.isActive,{'attr':{'class' : 'label-error'}}) }}
                        </div>
                    </div>

                </div>
                <div class="box-footer" style="text-align: right">
                    <a class="btn btn-default" href="{{ url('dashboard_home') }}">Cancel</a>
                    {{ form_widget(form.save,{'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
